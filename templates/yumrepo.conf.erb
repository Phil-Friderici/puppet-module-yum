NameVirtualHost <% if @yum_server_http_listen_ip != 'UNSET' %><%= @yum_server_http_listen_ip %><% else %><%= @ipaddress %><% end %>:80
<VirtualHost <% if @yum_server_http_listen_ip != 'UNSET' %><%= @yum_server_http_listen_ip %><% else %><%= @ipaddress %><% end %>:80>
    ServerName <%= @yum_server %>
    ServerAlias <%= @fqdn %> <%= @hostname %>
    ServerAdmin <%= @contact_email %>

    DocumentRoot <%= @docroot %>
    <Directory <%= @docroot %> >
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
</VirtualHost>
